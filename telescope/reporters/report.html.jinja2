<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <style>
    table tbody tr td {
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      max-width: 500px;
      padding: 3px;
    }
    .accordion-item {
      border: none !important;
    }
  </style>
  <title>Telescope Report</title>
</head>
<body>
<div class="accordion" id="acc">
  {%- for title, dataframe in dataframes.items() -%}
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading{{ title.replace(" ","_") }}">
        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapse{{ title.replace(" ","_") }}"
                aria-expanded="true" aria-controls="collapse{{- title.replace(" ","_") -}}">
          {{- title -}}
        </button>
      </h2>
      <div id="collapse{{- title.replace(" ","_") -}}" class="accordion-collapse collapse show"
           aria-labelledby="heading{{- title.replace(" ","_") -}}">
        <div class="accordion-body">
          {{- dataframe.to_html(border=0, classes=["table", "table-striped", "table-hover", "table-responsive"], justify="left") -}}
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>
</html>
